<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Deployer.Gui.Views"
        xmlns:design="clr-namespace:Deployer.Gui.ViewModels.Design"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Deployer.Gui.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Width="800"
        Height="600"
        Title="Deployer.Gui">
    
    <Design.DataContext>
        <design:MainViewModelDesign />
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="TextBlock.Error">
			<Setter Property="FontWeight" Value="Bold" />
		</Style>
	</Window.Styles>

	<Grid>

		<DockPanel>
            <TextBlock Margin="8" DockPanel.Dock="Bottom" Text="{Binding StatusMessage}" Classes="Error" />
            <Button Margin="18" DockPanel.Dock="Bottom" VerticalAlignment="Center" Command="{Binding SelectedDevice.SelectedDeployment.Deploy}" HorizontalAlignment="Center">Deploy</Button>
            <views:StepsView />
		</DockPanel>

        <Border Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="10"
                BorderBrush="Gray" BorderThickness="1"
                Padding="10"
                IsVisible="{Binding IsBusy}" >
            <views:OperationStatusView DataContext="{Binding OperationStatus}"/>
        </Border>

	</Grid>


</Window>